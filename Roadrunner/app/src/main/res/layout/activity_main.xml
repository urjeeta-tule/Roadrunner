    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff6d12ff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#ffcbe3"
        >




        <TextView
        android:text="Roadrush"
        android:layout_weight="2"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:background="#ffcbe3"
        android:textStyle="bold"/>


    <TextView
        android:text="hello"
        android:layout_weight="1"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:background="#ffcbe3"
        android:textStyle="bold"/>
    </LinearLayout>

    <ImageView
        android:src="@drawable/avatar_2x"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="60dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email_address"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="70dp"
        android:textStyle="bold"
        />

    <EditText android:id="@+id/uname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="330dp"
        android:layout_gravity="center_horizontal"
        android:text=""
        android:background="#c3d3ff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="70dp"
        android:textStyle="bold" />


        <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="390dp"
        android:layout_gravity="center_horizontal"
        android:text=""
        android:inputType="textPassword"
        android:background="#cbe3ff"
        android:id="@+id/pwd"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="450dp"
        android:layout_marginBottom="10dp"
        android:text="sign in"
        android:id="@+id/btnSimple"
        android:background="#b399ff"
        android:onClick="getme"/>

</RelativeLayout>
